<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".homeui.notification.NotificationFragment">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:text="주변 알림"
            android:textSize="30sp"
            android:fontFamily="@font/apple_bold"
            android:textColor="#000000"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:gravity="center">

            <android.widget.Button
                android:id="@+id/notification_map_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/sign_up_edit_border2"
                android:fontFamily="@font/apple_bold"
                android:text="지도"
                android:textColor="#FFFFFF"/>

            <android.widget.Button
                android:id="@+id/notification_welfare_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/sign_up_edit_border"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:text="복지기관"
                android:fontFamily="@font/apple_bold"
                android:textColor="#000000"/>

            <android.widget.Button
                android:id="@+id/notification_restaurant_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/sign_up_edit_border"
                android:text="나눔 음식점"
                android:fontFamily="@font/apple_bold"
                android:textColor="#000000"/>

        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/notification_container"
        android:layout_width="413dp"
        android:layout_height="600dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>