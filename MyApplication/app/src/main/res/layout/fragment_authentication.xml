<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/apple_bold"
        android:text="인증"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="인증대상의 아이디를 입력해 주세요."
            android:textColor="#000000"
            android:textSize="20sp"
            android:fontFamily="@font/apple_bold"/>

        <EditText
            android:id="@+id/change_type_userId_edit"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:background="@drawable/sign_up_edit_border"
            android:hint="아이디"
            android:fontFamily="@font/apple_bold"/>

        <android.widget.Button
            android:id="@+id/change_type_find_user_btn"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/sign_up_edit_border2"
            android:text="조회"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:fontFamily="@font/apple_bold"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>