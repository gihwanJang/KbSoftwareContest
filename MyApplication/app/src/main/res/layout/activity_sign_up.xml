<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#FFC000"
            app:srcCompat="@drawable/ic_logo2" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:text="회원가입"
                    android:textColor="#000000"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/apple_bold"/>

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="25dp"
                    android:text="본인 이름"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/apple_bold"/>

                <EditText
                    android:id="@+id/input_name"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/sign_up_edit_border" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="28dp"
                    android:text="계정명"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/apple_bold"/>

                <EditText
                    android:id="@+id/input_id"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/sign_up_edit_border" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="28dp"
                    android:text="비밀번호"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/apple_bold"/>

                <EditText
                    android:id="@+id/input_pw"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/sign_up_edit_border"
                    android:hint="비밀번호"
                    android:textSize="15sp" />


                <EditText
                    android:id="@+id/input_pw_check"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/sign_up_edit_border"
                    android:hint="비밀번호 확인"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="28dp"
                    android:text="본인 전화 번호"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/apple_bold"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:orientation="horizontal" >

                    <Spinner
                        android:id="@+id/spinner"
                        android:layout_width="80dp"
                        android:layout_height="42dp"
                        android:layout_weight="1" />

                    <EditText
                        android:id="@+id/input_tel"
                        android:layout_width="200dp"
                        android:layout_height="42dp"
                        android:background="@drawable/sign_up_edit_border"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:hint="010-1234-5678"
                        android:textSize="15sp"/>

                    <android.widget.Button
                        android:id="@+id/send_SMS_btn"
                        android:layout_width="70dp"
                        android:layout_height="42dp"
                        android:background="@drawable/sign_up_edit_border2"
                        android:text="인증 요청"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:fontFamily="@font/apple_bold"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal" >

                    <EditText
                        android:layout_width="280dp"
                        android:layout_height="37dp"
                        android:background="@drawable/sign_up_edit_border"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:hint="010-1234-5678"
                        android:textSize="15sp"/>

                    <android.widget.Button
                        android:id="@+id/SMS_check_btn"
                        android:layout_width="70dp"
                        android:layout_height="37dp"
                        android:background="@drawable/sign_up_edit_border2"
                        android:text="확인"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:fontFamily="@font/apple_bold"/>

                </LinearLayout>

                <android.widget.Button
                    android:id="@+id/sign_up_submit_btn"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/sign_up_edit_border2"
                    android:layout_marginTop="40dp"
                    android:layout_marginStart="80dp"
                    android:layout_marginEnd="80dp"
                    android:layout_marginBottom="20dp"
                    android:text="가    입"
                    android:textColor="#FFFFFF"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/apple_bold"/>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>